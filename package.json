{
  "name": "checklist-backend",
  "version": "1.0.0",
  "scripts": {
    "start": "node ./dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:migrate:staging": "NODE_ENV=staging tsx src/db/migrate.ts",
    "db:migrate:production": "NODE_ENV=production tsx src/db/migrate.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "express": "^4.18.2",
    "firebase-admin": "^13.4.0",
    "pg": "^8.16.0",
    "postgres": "^3.4.7",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.15.4",
    "drizzle-kit": "^0.31.1"
  }
}
